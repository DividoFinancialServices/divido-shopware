<?xml version="1.0" encoding="utf-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/5.3/engine/Shopware/Components/Plugin/schema/config.xsd">
    <elements>
        <element required="true" type="text" scope="locale">
            <name>Api Key</name>
            <label lang="de">Api Key</label>
            <label lang="en">Api Key</label>
            <description lang="de">Please add a divido api key</description>
            <description lang="en">Please add a divido api key</description>
        </element>


        <element required="true" type="boolean" scope="locale">
            <name>Debug</name>
            <label lang="de">Debug</label>
            <label lang="en">Debug</label>
            <description lang="de">Debugging Enabled - Turn this off in production</description>
            <description lang="en">Debugging Enabled - Turn this off in production</description>
        </element>

        <element required="true" type="select" scope="locale">
            <name>Product Selection</name>
            <label lang="de">Product Selection</label>
            <label lang="en">Product Selection</label>
            <description lang="de">Product Selection</description>
            <description lang="en">Product Selection</description>
                <store>
                    <option>
                        <value>All Products</value>
                        <label lang="de">All Products</label>
                        <label lang="en">All Products</label>
                    </option>
                    <option>
                        <value>Products Over a certain price</value>
                        <label lang="de">Products Over a certain price</label>
                        <label lang="en">Products Over a certain price</label>
                    </option>
                </store>
        </element>

        <element required="true" type="text" scope="locale">
            <name>Cart Threshold</name>
            <label lang="de">Cart Threshold</label>
            <label lang="en">Cart Threshold</label>
            <value>250</value>
            <description lang="de">Cart Threshold</description>
            <description lang="en">Cart Threshold</description>
        </element>

        <element required="true" type="boolean" scope="locale">
            <name>Small Price Widget</name>
            <label lang="de">Small Price Widget</label>
            <label lang="en">Small Price Widget</label>
            <description lang="de">Allow a small price widget</description>
            <description lang="en">Allow a small price widget</description>
        </element>

<!--Held for further testing
        <element required="false" type="text" scope="locale">
            <name>Shared Secret</name>
            <label lang="de">Shared Secret</label>
            <label lang="en">Shared Secret</label>
            <description lang="de">Shared Secret</description>
            <description lang="en">Shared Secret</description>
        </element> 
-->

     <element required="false" type="text" scope="locale">
            <name>Widget Prefix</name>
            <label lang="de">Widget Prefix</label>
            <label lang="en">Widget Prefix</label>
            <description lang="de">Widget Prefix</description>
            <description lang="en">Widget Prefix</description>
        </element>
        
     <element required="false" type="text" scope="locale">
            <name>Widget Suffix</name>
            <label lang="de">Widget Suffix</label>
            <label lang="en">Widget Suffix</label>
            <description lang="de">Widget Suffix</description>
            <description lang="en">Widget Suffix</description>
        </element>


    </elements>
</config>